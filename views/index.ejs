<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Random Currency Conversion Calculator</title>
  <!-- Bootstrap for styling (Extra Credit) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Axios CDN for frontend API call -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body class="bg-light">
  <div class="container text-center mt-5">
    <h1 class="mb-4">Random Currency Conversion Calculator</h1>
    <button class="btn btn-primary mb-3" onclick="loadRates()">Load</button>

    <!-- Display area for currency cards -->
    <div id="results" class="row justify-content-center"></div>
  </div>

  <script>
    // AJAX call to backend API when "Load" button is clicked
    // Based on Homework 3 logic for dynamic client-side update (Abigail)
    async function loadRates() {
      try {
        const response = await axios.get('/get-rates');
        const results = response.data;

        const container = document.getElementById('results');
        container.innerHTML = ''; // Clear previous results

        results.forEach(item => {
          const col = document.createElement('div');
          col.className = 'col-md-4 mb-4';

          // Create a Bootstrap-styled card for each result
          col.innerHTML = `
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title">${item.code}</h5>
                <p class="card-text">1 USD = ${item.rate} ${item.code}</p>
                <p class="card-text">100 ${item.code} = ${item.cost} USD</p>
              </div>
            </div>
          `;

          container.appendChild(col);
        });

      } catch (err) {
        console.error('Failed to load rates:', err);
        alert('Error loading currency data.');
      }
    }
  </script>
</body>
</html>
